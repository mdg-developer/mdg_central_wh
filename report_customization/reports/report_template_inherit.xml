<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[hasclass('text-center')]" position="replace">
            <div style="border-top: 1px solid black; text-align: center;">
                <ul class="list-inline mb4">
                    <div t-field="company.report_footer"/>
                </ul>
                <p>
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M:%S')"/>
                </p>
                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </xpath>
<!--        <xpath expr="//div[hasclass('pt-5')]" position="replace">-->
<!--            <div >-->
<!--                &lt;!&ndash; This div ensures that the address is not cropped by the header. &ndash;&gt;-->
<!--                <t t-call="web.address_layout"/>-->
<!--            </div>-->
<!--        </xpath>-->
    </template>
</odoo>