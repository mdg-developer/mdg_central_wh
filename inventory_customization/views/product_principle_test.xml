<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_principle_tree_view" model="ir.ui.view">
        <field name="name">product.principle</field>
        <field name="model">product.principle</field>
        <field name="arch" type="xml">
            <tree string="Product Principle">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_principle_form_view" model="ir.ui.view">
        <field name="name">product.principle</field>
        <field name="model">product.principle</field>
        <field name="arch" type="xml">
            <form string="Product Principle">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

     <record id="product_principle_view_search" model="ir.ui.view">
        <field name="name">product.principle.view.search</field>
        <field name="model">product.principle</field>
        <field name="arch" type="xml">
            <search string="Product Principle">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="product_principle_form_action" model="ir.actions.act_window">
        <field name="name">Product Principle</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.principle</field>
        <field name="view_id" ref="product_principle_tree_view"/>
        <field name="search_view_id" ref="product_principle_view_search"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a New Product Principle
          </p><p>
            New Product Principle Menu.
          </p>
        </field>
    </record>

    <menuitem id="product_principle_test_menu" name="Product Principle" parent="stock.menu_product_in_config_stock" sequence="1" action="inventory_customization.product_principle_form_action" />

</odoo>
