<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
	<record id='view_product_form_expiry_inherit_pallet' model='ir.ui.view'>
		<field name='name'>product.template</field>
		<field name='model'>product.template</field>
		<field name='inherit_id' ref='product_expiry.view_product_form_expiry'/>
		<field name='arch' type='xml'>
			<group name='expiry_and_lots' position='inside'>
				<field name='pallet_quantity'/>
			</group>
		</field>
	</record>
	
	<record id='product_packaging_form_view_inherit' model='ir.ui.view'>
		<field name='name'>product.packaging.form.view</field>
		<field name='model'>product.packaging</field>
		<field name='inherit_id' ref='product.product_packaging_form_view'/>
		<field name='arch' type='xml'>
			<field name='barcode' position='after'>
				<field name='pallet_quantity'/>
			</field>
		</field>
	</record>

	<record id="product_template_only_form_view_inherit" model="ir.ui.view">
		<field name="name">product.template.only.form.view.inherit</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_only_form_view"/>
		<field name="arch" type="xml">
			 <xpath expr="//page[@name='inventory']/group[@name='inventory']" position="inside">
				<group name="inventory_weight" string="Weights">
					<label for="viss"/>
					<div class="o_row" name="viss">
						<field name="viss"/>
					</div>

					<label for="cbm"/>
					<div class="o_row" name="cbm">
						<field name="cbm"/>
					</div>

					<label for="ti_x_hi"/>
					<div class="o_row" name="ti_x_hi">
						<field name="ti_x_hi"/>
					</div>
				</group>
			 </xpath>
		</field>
	</record>
	
</odoo>
